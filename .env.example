# Style365 Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=Style365Dev
DB_USER=postgres
DB_PASSWORD=your_password_here

# AWS Cognito Configuration
AWS_REGION=us-east-1
COGNITO_USER_POOL_ID=your_user_pool_id_here
COGNITO_USER_POOL_CLIENT_ID=your_client_id_here
COGNITO_USER_POOL_CLIENT_SECRET=your_client_secret_here
COGNITO_AUTHORITY=https://cognito-idp.us-east-1.amazonaws.com/your_user_pool_id_here

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_for_local_development_min_32_chars
JWT_EXPIRATION_MINUTES=60

# Application URLs
API_BASE_URL=https://localhost:5001
CUSTOMER_FRONTEND_URL=http://localhost:3000
ADMIN_FRONTEND_URL=http://localhost:3001

# AWS Services (for production)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
S3_BUCKET_NAME=style365-assets
CLOUDFRONT_DOMAIN=your_cloudfront_domain.com

# Redis Configuration (optional)
REDIS_CONNECTION_STRING=localhost:6379

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# PayHere Payment Gateway
PAYHERE_MERCHANT_ID=your_merchant_id
PAYHERE_MERCHANT_SECRET=your_merchant_secret
PAYHERE_SANDBOX_MODE=true

# Application Settings
ENVIRONMENT=Development
LOG_LEVEL=Information
ENABLE_SWAGGER=true